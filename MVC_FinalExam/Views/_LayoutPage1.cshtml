<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!--kendo-->
    <link href="~/kendo/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/kendo/styles/kendo.flat.min.css" rel="stylesheet" />
    <script src="~/kendo/js/kendo.all.min.js"></script>


    <style>
          .tableTitle {
                background-color: black;
                color: white;
                font-size: 32px;
                margin-top: 20px;
                border-radius: 10px 10px 0px 0px;
            }

                   span.k-widget.k-tooltip-validation {
            display: inline-block;
            width: 160px;
            text-align: left;
            border: 0;
            padding: 0;
            margin: 0;
            background: none;
            box-shadow: none;
            color: red;
            font-size:10px;
        }
                
         .k-tooltip-validation .k-warning {
             display: none;
         }
    </style>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        //ComboBox-CustomerTitle
        var Title=[];
        var array = @Html.Raw(Json.Encode(@ViewBag.CustomerTitle));
        for(var i = 0; i < array.length; i++) {
            Title.push({text:array[i].Text, value:array[i].Value});
        }
        $("#ContactTitle").kendoComboBox({
            dataTextField: "text",
            dataValueField: "value",
            dataSource: Title,
            filter: "contains",
            suggest: true,
            index: 0
        });

    });
</script>

